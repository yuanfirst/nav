{
  "name": "bookmark-manager",
  "version": "1.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "db:create": "wrangler d1 create bookmark-db",
    "db:init:local": "wrangler d1 execute bookmark-db --local --file=schema.sql",
    "db:init:remote": "wrangler d1 execute bookmark-db --remote --file=schema.sql",
    "db:migrate:indexes": "wrangler d1 execute bookmark-db --remote --file=migration-add-indexes.sql"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240000.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}

